# =====================================================
# NEXUSMART E-COMMERCE - ENVIRONMENT VARIABLES
# =====================================================
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control
# =====================================================

# =====================================================
# SERVER CONFIGURATION
# =====================================================
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# =====================================================
# DATABASE
# =====================================================
MONGODB_URI=mongodb://localhost:27017/nexusmart
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/nexusmart?retryWrites=true&w=majority

# =====================================================
# JWT CONFIGURATION
# =====================================================
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=7d
COOKIE_EXPIRE=7

# =====================================================
# CLIENT URLS
# =====================================================
CLIENT_URL=http://localhost:5173
# For production:
# CLIENT_URL=https://your-production-url.com

# =====================================================
# CLOUDINARY (Image Storage)
# =====================================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# =====================================================
# EMAIL CONFIGURATION (SMTP)
# =====================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SERVICE=gmail
SMTP_MAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_NAME=NexusMart

# =====================================================
# PAYMENT GATEWAYS
# =====================================================

# Stripe
STRIPE_API_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Razorpay (for Indian market)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# =====================================================
# AI & ML SERVICES
# =====================================================

# OpenAI (ChatGPT, DALL-E)
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_ORG_ID=org-your_organization_id

# AI Image Generation
AI_IMAGE_SERVICE=openai
# Options: openai, stability, replicate, midjourney
AI_IMAGE_CDN_URL=https://cdn.nexusmart.app/ai-generated

# Dialogflow (Conversational AI)
DIALOGFLOW_PROJECT_ID=your_project_id
DIALOGFLOW_CLIENT_EMAIL=your_service_account_email
DIALOGFLOW_PRIVATE_KEY=your_private_key

# Google Cloud Vision (Image Recognition)
GOOGLE_CLOUD_VISION_API_KEY=your_google_vision_api_key

# AWS Rekognition (Alternative to Google Vision)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Stability AI (Stable Diffusion)
STABILITY_AI_API_KEY=your_stability_api_key

# =====================================================
# MOBILE & DEEP LINKING
# =====================================================
DEEP_LINK_DOMAIN=https://app.nexusmart.link
QR_CODE_API_URL=https://api.qrserver.com/v1/create-qr-code

# =====================================================
# STREAMING & VIDEO
# =====================================================
VIDEO_CALL_SERVICE_URL=https://meet.jit.si
VIDEO_CALL_PLATFORM=jitsi
# Options: zoom, jitsi, agora, twilio

# Live Streaming
STREAMING_SERVICE=agora
# Options: agora, aws-ivs, twilio, mux
STREAMING_DOMAIN=live.nexusmart.app

# Agora.io
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_certificate

# AWS IVS (Interactive Video Service)
AWS_IVS_CHANNEL_ARN=your_ivs_channel_arn
AWS_IVS_PLAYBACK_URL=your_playback_url

# Twilio Video
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_API_KEY=your_twilio_api_key
TWILIO_API_SECRET=your_twilio_api_secret

# =====================================================
# SOCIAL MEDIA INTEGRATIONS
# =====================================================

# Facebook
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_long_lived_access_token

# Instagram
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# TikTok
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token

# Twitter/X
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# LinkedIn
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Apple Sign In
APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY=your_apple_private_key

# =====================================================
# CRYPTOCURRENCY & WEB3
# =====================================================

# Blockchain Network
WEB3_NETWORK=ethereum
# Options: ethereum, polygon, binance-smart-chain

# Ethereum/Polygon
INFURA_PROJECT_ID=your_infura_project_id
INFURA_PROJECT_SECRET=your_infura_secret
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your_project_id

# Smart Contract Addresses
NFT_CONTRACT_ADDRESS=0x_your_nft_contract_address
TOKEN_CONTRACT_ADDRESS=0x_your_token_contract_address

# Wallet Integration
METAMASK_ENABLED=true
WALLET_CONNECT_PROJECT_ID=your_walletconnect_project_id

# Crypto Payment Gateway
COINBASE_COMMERCE_API_KEY=your_coinbase_commerce_key
BINANCE_PAY_API_KEY=your_binance_pay_key

# CoinGecko/CoinMarketCap (for exchange rates)
COINGECKO_API_KEY=your_coingecko_api_key
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# =====================================================
# SHIPPING & LOGISTICS
# =====================================================
SHIPPING_LABEL_URL=https://shipping.nexusmart.app

# ShipStation
SHIPSTATION_API_KEY=your_shipstation_api_key
SHIPSTATION_API_SECRET=your_shipstation_api_secret

# FedEx
FEDEX_API_KEY=your_fedex_api_key
FEDEX_SECRET_KEY=your_fedex_secret_key

# UPS
UPS_CLIENT_ID=your_ups_client_id
UPS_CLIENT_SECRET=your_ups_client_secret

# DHL
DHL_API_KEY=your_dhl_api_key

# =====================================================
# SMS & WHATSAPP
# =====================================================

# Twilio (SMS)
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_MESSAGING_SERVICE_SID=your_messaging_service_sid

# WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# =====================================================
# ANALYTICS & MONITORING
# =====================================================

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X
GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel
MIXPANEL_TOKEN=your_mixpanel_token

# Segment
SEGMENT_WRITE_KEY=your_segment_write_key

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn

# New Relic (Performance Monitoring)
NEW_RELIC_LICENSE_KEY=your_new_relic_key
NEW_RELIC_APP_NAME=NexusMart-Backend

# =====================================================
# SEARCH & RECOMMENDATIONS
# =====================================================

# Algolia
ALGOLIA_APP_ID=your_algolia_app_id
ALGOLIA_ADMIN_API_KEY=your_algolia_admin_key
ALGOLIA_SEARCH_API_KEY=your_algolia_search_key

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elasticsearch_password

# =====================================================
# CDN & STORAGE
# =====================================================

# AWS S3
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY=your_s3_access_key
AWS_S3_SECRET_KEY=your_s3_secret_key

# CloudFront CDN
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# =====================================================
# REFERRAL & AFFILIATE
# =====================================================
REFERRAL_URL=https://nexusmart.app
AFFILIATE_COMMISSION_RATE=0.10

# =====================================================
# B2B & PUNCHOUT
# =====================================================
PUNCHOUT_URL=https://punchout.nexusmart.app

# Ariba
ARIBA_NETWORK_ID=your_ariba_network_id

# SAP
SAP_API_KEY=your_sap_api_key

# =====================================================
# VOICE ASSISTANTS
# =====================================================

# Amazon Alexa
ALEXA_SKILL_ID=your_alexa_skill_id
ALEXA_CLIENT_ID=your_alexa_client_id
ALEXA_CLIENT_SECRET=your_alexa_client_secret

# Google Assistant
GOOGLE_ACTIONS_PROJECT_ID=your_actions_project_id

# =====================================================
# NOTIFICATION SERVICES
# =====================================================

# Firebase Cloud Messaging (Push Notifications)
FCM_SERVER_KEY=your_fcm_server_key
FCM_SENDER_ID=your_fcm_sender_id

# OneSignal
ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_REST_API_KEY=your_onesignal_api_key

# =====================================================
# MAP & LOCATION SERVICES
# =====================================================

# Google Maps
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Mapbox
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# =====================================================
# CUSTOMER SUPPORT
# =====================================================

# Zendesk
ZENDESK_SUBDOMAIN=your_subdomain
ZENDESK_EMAIL=your_zendesk_email
ZENDESK_API_TOKEN=your_zendesk_token

# Intercom
INTERCOM_APP_ID=your_intercom_app_id
INTERCOM_API_KEY=your_intercom_api_key

# Freshdesk
FRESHDESK_DOMAIN=your_domain.freshdesk.com
FRESHDESK_API_KEY=your_freshdesk_api_key

# =====================================================
# LOYALTY & REWARDS
# =====================================================
LOYALTY_POINTS_TO_CURRENCY_RATIO=0.01
# 100 points = $1

# =====================================================
# SECURITY & COMPLIANCE
# =====================================================

# reCAPTCHA
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# 2FA
TWO_FACTOR_AUTH_ENABLED=true
OTP_EXPIRY_MINUTES=10

# =====================================================
# RATE LIMITING
# =====================================================
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# CORS ALLOWED ORIGINS (comma-separated)
# =====================================================
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# =====================================================
# REDIS (Caching & Sessions)
# =====================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# =====================================================
# FEATURE FLAGS
# =====================================================
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_CRYPTO_PAYMENTS=true
ENABLE_LIVE_SHOPPING=true
ENABLE_AR_VR=true
ENABLE_VOICE_COMMERCE=true
ENABLE_SOCIAL_COMMERCE=true
ENABLE_B2B_FEATURES=true

# =====================================================
# DEBUG & LOGGING
# =====================================================
DEBUG_MODE=false
LOG_LEVEL=info
# Options: error, warn, info, debug

# =====================================================
# BACKUP & DISASTER RECOVERY
# =====================================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# =====================================================
# END OF CONFIGURATION
# =====================================================
